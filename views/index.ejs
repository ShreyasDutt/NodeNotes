<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <script src="https://cdn.tailwindcss.com"></script>
        <title>Node:NotesApp</title>
    </head>
    <body class="bg-zinc-900 font-mono">

        <div class="flex flex-col items-center justify-center mt-20">
            <h1 class="text-bold text-5xl text-yellow-600 hover:scale-105 hover:duration-300">Notes</h1>

            <div class="mt-10">
                <form action="/create" method='post' class="flex flex-col gap-2 w-96">
                    <input type="text" placeholder='Title' class='p-2.5 h-10 rounded-md hover:scale-105 ease-in-out duration-200' name='title'>
                    <textarea placeholder="Description" class="p-2.5 rounded-md hover:scale-105 ease-in-out duration-200 resize-none" name='details'></textarea>

                    <button type="submit" class="bg-zinc-500 w-40 h-10 rounded-xl hover:scale-105 duration-200" value="">Create</button>
                </form>
            </div>


        </div>

        <div class="flex items-center justify-center bg-zinc-900">

            <h1 class='text-white'>
                <% if (notes.length !== 0) { %>
                <div class="flex flex-wrap gap-6 mt-10">
                    <% notes.forEach((val) => { %>
                    <div class="p-6 bg-zinc-800 rounded-md text-white">
                        <h1 class="mb-2 font-bold"><%= val || "Task" %></h1>
                        <a href="/files/<%= val %>" class="text-blue-400">Read Task Description</a>
                    </div>
                    <% }) %>
                </div>
                <% } else { %>
                <h1 class="mb-2 font-bold text-white mt-10 text-xl">No Tasks Yet!</h1>
                <% } %>

            </h1>

        </div>

    </body>
</html>